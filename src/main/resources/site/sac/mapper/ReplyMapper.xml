<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.sac.mapper.ReplyMapper">
    <insert id="insertReply" parameterType="site.sac.mapper.ReplyDTO">
        INSERT INTO SAC_REPLY (reply_id, board_id, user_id, reply_content)
        VALUES (#{reply_id}, #{board_id}, #{user_id}, #{reply_content})
    </insert>

    <select id="getReplyByReplyId" resultType="site.sac.mapper.ReplyDTO">
        SELECT * FROM SAC_REPLY WHERE reply_id = #{reply_Id}
    </select>

    <select id="getAllReplyByBoardId" resultType="site.sac.mapper.ReplyDTO">
        SELECT * FROM SAC_REPLY WHERE board_id = #{board_id}
    </select>

    <select id="getAllReplyByUserId" resultType="site.sac.mapper.ReplyDTO">
        SELECT * FROM SAC_REPLY WHERE user_id = #{user_id}
    </select>

    <update id="updateReply">
        UPDATE SAC_REPLY SET reply_content = #{reply_content}, created_date = SYSTIMESTAMP
        WHERE reply_id = #{reply_id}
    </update>

    <delete id="deleteReply">
        DELETE FROM SAC_REPLY WHERE reply_id = #{reply_Id}
    </delete>

</mapper>