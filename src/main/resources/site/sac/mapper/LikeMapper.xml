<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.sac.mapper.LikeMapper">

    <insert id="insert">
        INSERT INTO SAC_LIKE (post_id, user_id)
        VALUES (#{post_id}, #{user_id})
    </insert>

    <delete id="delete">
        DELETE SAC_LIKE WHERE post_id = #{post_id} AND user_id = #{user_id}
    </delete>

    <select id="countByPostId">
        SELECT COUNT(*) FROM SAC_LIKE WHERE post_id = #{post_id};
    </select>
</mapper>